<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="infinitynurse.frontend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="infinitynurse.frontend.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="infinitynurse.frontend.NewNurseActivity"
            android:label="@string/title_activity_new_nurse" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.NewPatientActivity"
            android:label="@string/title_activity_new_patient" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.ListPatientsActivity"
            android:label="@string/title_activity_list_patients" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.ViewPatientActivity"
            android:label="@string/title_activity_view_patient" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.RecordListActivity"
            android:label="@string/title_activity_record_list" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.ViewRecordActivity"
            android:label="@string/title_activity_view_record" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.AddPrescriptionActivity"
            android:label="@string/title_activity_add_prescription" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.LookupActivity"
            android:label="@string/title_activity_lookup" >
        </activity>
        <activity
            android:name="infinitynurse.frontend.StaticPatientActivity"
            android:label="@string/title_activity_static_patient" >
        </activity>
    </application>

</manifest>
